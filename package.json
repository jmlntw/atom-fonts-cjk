{
  "name": "fonts-cjk",
  "version": "2.2.0",
  "description": "Delivers better CJK fonts to Atom editor.",
  "keywords": [
    "fonts",
    "cjk",
    "chinese",
    "japanese",
    "korean",
    "monospace",
    "typography"
  ],
  "author": {
    "name": "Jimmy Lin",
    "email": "jmlntw@gmail.com"
  },
  "license": "MIT",
  "homepage": "https://atom.io/packages/fonts-cjk",
  "repository": {
    "type": "git",
    "url": "https://github.com/jmlntw/atom-fonts-cjk.git"
  },
  "bugs": {
    "url": "https://github.com/jmlntw/atom-fonts-cjk/issues"
  },
  "main": "./lib/fonts-cjk",
  "scripts": {
    "lint": "standard --verbose",
    "test": "npm run lint && apm test"
  },
  "engines": {
    "atom": ">=1.13.0 <2.0.0"
  },
  "devDependencies": {
    "standard": "^12.0.0"
  },
  "standard": {
    "env": [
      "browser",
      "node",
      "atomtest",
      "jasmine"
    ],
    "globals": [
      "atom"
    ]
  },
  "private": true,
  "configSchema": {
    "editorFont": {
      "type": "string",
      "title": "Editor Font",
      "description": "Use one of the fonts available in this package.",
      "order": 1,
      "default": "(Default)",
      "enum": [
        "(Default)",
        "M+ 1m",
        "M+ 2m",
        "Ricty Diminished",
        "Sarasa Mono J",
        "Sarasa Mono SC",
        "Sarasa Mono TC"
      ]
    },
    "markdownPreviewFont": {
      "type": "string",
      "title": "Markdown Preview Font",
      "description": "Use one of the fonts available in this package.",
      "order": 2,
      "default": "(Default)",
      "enum": [
        "(Default)",
        "M+ 1p",
        "M+ 2p",
        "M+ 1m",
        "M+ 2m",
        "Noto Sans JP",
        "Noto Sans KR",
        "Noto Sans SC",
        "Noto Sans TC",
        "Ricty Diminished",
        "Sarasa Mono J",
        "Sarasa Mono SC",
        "Sarasa Mono TC"
      ]
    },
    "workspaceFont": {
      "type": "string",
      "title": "Workspace Font",
      "description": "Use one of the fonts available in this package.",
      "order": 3,
      "default": "(Default)",
      "enum": [
        "(Default)",
        "M+ 1p",
        "M+ 2p",
        "M+ 1m",
        "M+ 2m",
        "Noto Sans JP",
        "Noto Sans KR",
        "Noto Sans SC",
        "Noto Sans TC",
        "Ricty Diminished",
        "Sarasa Mono J",
        "Sarasa Mono SC",
        "Sarasa Mono TC"
      ]
    },
    "secondaryFont": {
      "type": "string",
      "title": "Secondary Font",
      "description": "Additional fonts for glyphs missing in the main font.",
      "order": 4,
      "default": ""
    }
  }
}
